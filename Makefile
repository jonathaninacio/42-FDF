clean :
	@echo "\033[0;31m"
	rm -rf $(SRCDIR)$(OBJS)
	make -C $(LIBFTDIR) clean
	@echo "\033[00m"

fclean : clean
	@echo "\033[0;31m"
	rm -f $(NAME)
	make -C $(LIBFTDIR) fclean
	@echo "\033[00m"

re : fclean all

.PHONY: all clean fclean re
