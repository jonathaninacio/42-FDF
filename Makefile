NAME := fdf

MLX := -framework OpenGL -framework AppKit -lmlx

MEM_DEBUG = -fsanitize=address

LLDB_DEBUG = -g

FLAGS = -Wall -Wextra -Werror

SRCS =	main.c \
				button.c \
				create_map.c \
				destroy.c \
				draw.c \
				key.c \
				map_errors.c \
				motion.c \
				parsing.c \
				prep_tracing.c

SRCDIR = ./srcs/

SRCINC = $(addprefix $(SRCDIR),$(SRCS))

OBJS = $(SRCS:.c=.o)

INCDIR = ./includes/

INCINC = $(addprefix $(INCDIR),$(NAME).h)

LIBFTDIR = ./libft/

LIBFTH = $(LIBFTDIR)libft.a

all : $(NAME)

$(NAME) :
	@echo "\033[0;32m"
	make -C $(LIBFTDIR)
	@echo "\033[00m"
	@echo "\033[0;32m"
	gcc $(FLAGS) $(MLX) $(SRCINC) -o $(NAME) $(LIBFTH) -I $(INCINC)
	@echo "\033[00m"
	@echo "\033[00m" \
